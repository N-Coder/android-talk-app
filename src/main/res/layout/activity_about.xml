<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.unipassau.ieee.weatherDemo.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewAbout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewAbout1"
            android:layout_marginTop="20dp"
            android:text="Created by\n
Niko Fink &lt;niko@fink.bayern&gt;\n
and\n
Marco Ziegaus &lt;github@marcoziegaus.de&gt;.\n\n
Published under the BEER-WARE licence.\n\n
This app uses the public and free API of openweathermap.org."
            android:textSize="20sp"/>

    </RelativeLayout>

</ScrollView>


